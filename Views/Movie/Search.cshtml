@model IEnumerable<Movie>
<h2 class="create-movie-title">Horror Reviews</h2>
<div style="display: block">
   <a href="/Movie/InsertMovie/">Create a New Movie Review</a>
</div>
<table class="table">
    <tr>
        <th>MovieID</th>
        <th>Name</th>
        <th>Year</th>
        <th>Genre</th>
        <th>Viewer Rating</th>
        <th>Director</th>
    </tr>

    @foreach (var movie in Model)
    {
        <tr>
            <td><a href=/Movie/ViewMovie/@movie.MovieID>@movie.MovieID</a></td>
            <td>@movie.Name</td>
            <td>@movie.Year</td>
            <td>@movie.Genre</td>
            <td>@movie.Rating</td>
            <td>@movie.Director</td>
        </tr>
    }

</table>

